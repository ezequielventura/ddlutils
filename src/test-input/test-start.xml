<?xml version="1.0" encoding="ISO-8859-1"?>

<database name="bookstore" version="1.0">

  <table name="test_table" description="Test Table">
    <column
      name="id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      size="11"
      description="Unique id"
      autoIncrement="true"
    />
    <column
      name="name"
      required="true"
      type="VARCHAR"
      size="50"
      description="Name"
      defaultValue=""
    />
    <column
      name="number"
      required="false"
      type="INTEGER"
      size="11"
      defaultValue="25"
    />

    <index name="test_index" unique="true">
        <index-column name="name"/>
    </index>


  </table>

</database>
