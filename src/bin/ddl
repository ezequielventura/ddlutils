#!/bin/sh
# ----------------------------------------------------------------------------
# Script for the DDL tool
#
# Required Environment Variables
#
#   JAVA_HOME          Points to the Java Development Kit installation.
#
# Optional Environment Variables
# 
#   COMMONS_SQL_HOME   Points to the commons-sql installation directory.
#
#   JAVA_OPTS       Java runtime options
#
# $Id: ddl,v 1.7 2002/12/17 13:03:10 tanderson Exp $
# ----------------------------------------------------------------------------

# OS specific support.  $var _must_ be set to either true or false.
cygwin=false
case "`uname`" in
CYGWIN*) cygwin=true;;
esac

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
  [ -n "$COMMONS_SQL_HOME" ] && COMMONS_SQL_HOME=`cygpath --unix "$COMMONS_SQL_HOME"`
fi

if [ -z "$JAVA_HOME" ]; then
  echo "The JAVA_HOME environment variable is not set."
  echo "This is required to run this tool."
  exit 1
fi
if [ ! -r "$JAVA_HOME"/bin/java ]; then
  echo "The JAVA_HOME environment variable is not set correctly."
  echo "This is required to run this tool."
  exit 1
fi
_RUNJAVA="$JAVA_HOME"/bin/java


# Guess COMMONS_SQL_HOME if it is not set
if [ -z "$COMMONS_SQL_HOME" ]; then
# resolve links - $0 may be a softlink
  PRG="$0"
  while [ -h "$PRG" ]; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '.*/.*' > /dev/null; then
      PRG="$link"
    else
      PRG=`dirname "$PRG"`/"$link"
    fi
  done

  PRGDIR=`dirname "$PRG"`
  COMMONS_SQL_HOME=`cd "$PRGDIR/.." ; pwd`
elif [ ! -r "$COMMONS_SQL_HOME"/bin/ddl ]; then
  echo "The COMMONS_SQL_HOME environment variable is not set correctly."
  echo "This is required to run this tool."
  exit 1
fi

CLASSPATH="$COMMONS_SQL_HOME"/lib/forehead.jar

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
  JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
  COMMONS_SQL_HOME=`cygpath --path --windows "$COMMONS_SQL_HOME"`
  CLASSPATH=`cygpath --path --windows "$CLASSPATH"`
fi

# Execute the command
echo "Using COMMONS_SQL_HOME: $COMMONS_SQL_HOME"
echo "Using JAVA_HOME:    $JAVA_HOME"

exec "$_RUNJAVA" $JAVA_OPTS -Dcommons.sql.home="$COMMONS_SQL_HOME" \
    -classpath "$CLASSPATH" \
    -Dforehead.conf.file=${COMMONS_SQL_HOME}/bin/forehead.conf \
    com.werken.forehead.Forehead "$@"
